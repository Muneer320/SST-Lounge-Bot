# Discord Bot Token (Required)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Database Configuration
DATABASE_URL=sqlite:///bot_database.db

# Clist.by API (Optional - for enhanced contest features)
CLIST_API_USERNAME=your_clist_username
CLIST_API_KEY=your_clist_api_key

# Bot Configuration
BOT_PREFIX=!
DEBUG_MODE=False

# Timezone (All times displayed in IST)
TIMEZONE=Asia/Kolkata

# Contest Settings
CONTEST_CHECK_INTERVAL=24  # hours
CONTEST_ANNOUNCEMENT_TIME=09:00  # IST (24-hour format)

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
